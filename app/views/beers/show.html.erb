<div class="sm:pt-16 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-2xl lg:max-w-none lg:grid lg:grid-cols-2 lg:items-start lg:gap-x-8">
    <div class="rounded-lg bg-zinc-100">
      <%= render BeerImageComponent.new(@beer, size: :xl) %>
    </div>

    <div class="mt-10 px-4 sm:px-0 lg:mt-0">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900"><%= @beer.name %></h1>

      <div class="mt-3">
        <p class="text-xl tracking-tight text-gray-900"><%= @beer.abv %>% vol</p>
      </div>

      <div class="mt-4 space-y-6 text-base text-gray-700">
        <p><%= @beer.description %></p>
      </div>

      <div class="mt-6 border-t">
        <h3 class="text-gray-900 text-sm font-medium pt-6 pb-2">Suitable dishes</h3>

        <div class="prose prose-sm pb-6">
          <ul>
            <% @beer.food_pairing.each do |food| %>
              <li><%= food %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
