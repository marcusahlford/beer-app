<%= link_to @url.call(page), data: {controller: 'scroll-to', action: 'scroll-to#top'}, class: "flex #{'flex-row-reverse' if icon_last?} gap-x-2 items-center text-sm font-medium text-gray-500 hover:text-gray-700" do %>
  <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
    <path fill-rule="evenodd" d="<%= svg_path_data %>" clip-rule="evenodd" />
  </svg>
  <span><%= link_text %></span>
<% end %>
